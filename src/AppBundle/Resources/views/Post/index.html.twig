{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Addeddate</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('get_post', { 'id': post.id }) }}">{{ post.title }}</a></td>
                <td>{{ post.content }}</td>
                <td>{% if post.addedDate %}{{ post.addedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ post.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('get_post', { 'id': post.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
